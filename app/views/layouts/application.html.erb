<!DOCTYPE html>
<html>
<head>
  <title>Foodsters</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Foodster</a>
      </div>
      <div>
        <ul class="nav navbar-nav">
          <li><a href="#">Search Reciepes</a></li>
          <li><a href="#">Your Meal Plan</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="#">Shopping List</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Hello, @current_user.first_name<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="#">Account Info</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">Sign Out</a></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to "Real Sign Out", sign_out_path, method: :delete %></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
<div class="container">
  <%= yield %>
</div>

</body>
</html>
