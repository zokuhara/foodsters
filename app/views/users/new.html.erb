<div class="col-md-6 col-md-offset-3">
  <h1>Sign Up</h1>

  <%= simple_form_for @user do |f| %>
    <%= f.input :email %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :password %>
    <%= f.input :password_confirmation, label: "Confirm Password" %>
    <%= f.submit "Create Account", class: "btn btn-success btn-block btn-lg" %>
  <% end %>
</div>
