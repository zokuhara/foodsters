<div class="search col-md-8 col-md-offset-2">
  <%= form_tag("/recipes/search", method: "get") do %>
    <div class="form-group">
      <%= label_tag(:q, "Search for:") %>
      <%= text_field_tag (:q), "", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag "Search", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
